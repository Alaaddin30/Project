@model LoginViewModel
@{ 
    ViewBag.Title = "Log in";
}
<div id="login" class="container mt-5 mb-5  col-sm-7">
    <h3>Log In</h3>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <form method="post" asp-action="Login" asp-controller="Account">
        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
        <div class="form-group">
            <label asp-for="UserName">Username</label>
            <input asp-for="UserName" class="form-control" />
            <div><span class="text-danger" asp-validation-for="UserName"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" class="form-control" />
            <div><span class="text-danger" asp-validation-for="Password"></span></div>
        </div>
        <button type="submit" class="btn btn-primary">Log in <i class="fa fa-sign-in"></i></button>
        <a class="btn btn-default" asp-controller="Blog" asp-action="Index">Cancel <i class="fa fa-home"></i></a>
    </form>
</div>