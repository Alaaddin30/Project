@model SignUpViewModel
@{
    ViewBag.Title = "Sign Up";
}

<div id="signup" class="container mt-5 mb-5 col-sm-9">
    <h3>Sign Up</h3>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <form method="post" asp-action="SignUp" asp-controller="Account">
        <div class="form-group">
            <label asp-for="UserName">Username</label>
            <input asp-for="UserName" class="form-control" />
            <div><span class="text-danger" asp-validation-for="UserName"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" class="form-control" />
            <div><span class="text-danger" asp-validation-for="Password"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <div><span class="text-danger" asp-validation-for="ConfirmPassword"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" />
            <div><span class="text-danger" asp-validation-for="Email"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="FirstName">FirstName</label>
            <input asp-for="FirstName" class="form-control" />
            <div><span class="text-danger" asp-validation-for="FirstName"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="LastName">LastName</label>
            <input asp-for="LastName" class="form-control" />
            <div><span class="text-danger" asp-validation-for="LastName"></span></div>
        </div>
        <button type="submit" class="btn btn-primary">Sign Up <i class="fa fa-sign-in"></i></button>
        <a class="btn btn-default" asp-href="/">Cancel <i class="fa fa-home"></i></a>
    </form>
</div>