@model CreateBlogViewModel
<div class="mt-3 mb-3">
    <div class="alert alert-heading lead mb-2 mt-2"><h2>Create New Blog</h2></div>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <form asp-controller="Blog" asp-action="Edit" method="post">
        <input type="hidden" asp-for="BlogId" />
        <div class="form-group">
            <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control">
                <option value="">Select Category</option>
            </select>
            <div><span class="text-danger" asp-validation-for="CategoryId"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" class="form-control" />
            <div><span class="text-danger" asp-validation-for="Title"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="Body">Body</label>
            <textarea asp-for="Body" class="form-control" cols="9" rows="10"></textarea>
            <div><span class="text-danger" asp-validation-for="Body"></span></div>
        </div>
        <button type="submit" class="btn btn-danger">Save <i class="fa fa-save"></i></button>
        <a class="btn btn-default" asp-action="MyPage">Cancel <i class="fa fa-times-circle"></i></a>
    </form>
</div>