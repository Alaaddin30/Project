<ul class="navbar-nav" id="account">
@if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
{
    <li class="nav-item"><a class="nav-link" asp-action="MyPage" asp-controller="Blog">@ViewBag.Username <i class="fa fa-user-o"></i></a></li>
    <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Logout">Logout <i class="fa fa-sign-out"></i></a></li>
}
else
{
    <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login"><i class="fa fa-sign-in"></i> Login</a></li>
    <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="SignUp"><i class="fa fa-sign-in"></i> Signup</a></li>
}
</ul>

