<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script asp-src-include="lib/jquery/dist/jquery.min.js"></script>
    <script asp-src-include="lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script asp-src-include="lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script asp-href-include="lib/moment/min/*.min.js"></script>
    <link asp-href-include="lib/bootstrap/dist/css/*.min.css" rel="stylesheet" />
    <link asp-href-include="lib/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link  asp-href-include="blog/css/blog.css" rel="stylesheet" />
    <link asp-href-include="blog/css/override.css" rel="stylesheet" />
    <script asp-src-include="lib/moment/moment.js"></script>
    <script asp-src-include="lib/moment/locale/sv.js"></script>
    <script src="~/lib/moment-timezone/builds/moment-timezone-with-data-2012-2022.min.js"></script>


    <!-- Custom Fonts -->
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <title>Mvc Core Blog</title>
</head>
<body>
    <!-- BLOG Navigation - START -->
    @await Component.InvokeAsync("Navigation")
    @*@Html.Partial("PartialNavigation")*@
    <!-- BLOG Navigation - END -->

    <!-- BLOG CONTENT - START -->
    <div class="container">
        <div class="row">

            <!-- BLOG SIDEBAR - START -->
            <div class="col-sm-3">
                <div navigation
                     category-controller="Blog"
                     category-action="Index"

                     current-category-id="Convert.ToInt32(@ViewContext.RouteData?.Values["categoryId"])"
                     id="sidebar">

                </div>
            </div>
            <!-- BLOG SIDEBAR - END -->


            <div class="col-sm-8">
                @RenderBody()
            </div>
        </div>
    </div>
    <!-- BLOG CONTENT - END -->

    <!-- BLOG Footer - START -->
    @await Component.InvokeAsync("Footer")
    @*@Html.Partial("PartialFooter")*@
    <!-- BLOG Footer - END -->

    <script asp-src-include="lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script asp-src-include="blog/js/blog.min.js"></script>
</body>
</html>
