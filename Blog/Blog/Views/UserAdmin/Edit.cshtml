@model EditUserViewModel
@{ 
    Layout = "_LayoutAdmin";
}

<div class="mt-5 mb-5"><h3>Edit User</h3></div>
<div class="text-danger" asp-validation-summary="All"></div>
<form method="post" asp-controller="UserAdmin" asp-action="Edit">
    <div class="form-group">
        <label asp-for="Id">User ID</label>
        <input asp-for="Id" class="form-control"  disabled/>
    </div>
    <div class="form-group">
        <label asp-for="Username">User Name</label>
        <input asp-for="Username" class="form-control" disabled/>
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <button type="submit" class="btn btn-danger cust-link">Save <i class="fa fa-save"></i></button>
    <a asp-action="Index" asp-controller="UserAdmin" class="btn btn-default cust-link">Cancel <i class="fa fa-home"></i></a>
</form>