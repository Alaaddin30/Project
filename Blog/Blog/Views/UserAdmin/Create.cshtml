@model CreateUserViewModel
@{ 
    Layout = "_LayoutAdmin";
}

<div class="mt-3 mb-3">
    <div class="alert alert-heading lead mb-2 mt-2"><h2>Create New User</h2></div>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <form asp-controller="UserAdmin" asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Username">User Name</label>
            <input asp-for="Username" class="form-control" />
            <div><span class="text-danger" asp-validation-for="Username"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" class="form-control" />
            <div><span class="text-danger" asp-validation-for="Password"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <div><span class="text-danger" asp-validation-for="ConfirmPassword"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="Email">Eamil</label>
            <input asp-for="Email" class="form-control" />
            <div><span class="text-danger" asp-validation-for="Email"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" class="form-control" />
            <div><span class="text-danger" asp-validation-for="FirstName"></span></div>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Last Name</label>
            <input asp-for="LastName" class="form-control" />
            <div><span class="text-danger" asp-validation-for="LastName"></span></div>
        </div>
        <div class="btn btn-group">
            <button type="submit" class="btn btn-success cust-link mr-2">Create New User <i class="fa fa-plus-circle"></i></button>
            <a asp-controller="UserAdmin" asp-action="Index" class="btn btn-default cust-a">Cancel <i class="fa fa-times-circle"></i></a>
        </div>
    </form>
</div>