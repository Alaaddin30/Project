@model Category
@{
    Layout = "_LayoutAdmin";
}
<div class="alert alert-heading lead mt-5"><h3>Edit @Model.CategoryName</h3></div>
<form method="post" asp-action="Edit" class="col-sm-6">
    <input type="hidden" asp-for="CategoryId" />
    <div class="form-group">
        <label asp-for="CategoryId">Category ID</label>
        <input asp-for="CategoryId" class="form-control" disabled/>
    </div>
    <div class="form-group">
        <label asp-for="CategoryName">Name</label>
        <input asp-for="CategoryName" class="form-control" />
        <small><span asp-validation-for="CategoryName" class="text-danger"></span></small>
    </div>
    <button type="submit" class="btn btn-lg btn-success cust-link">Update Category <i class="fa fa-save"></i></button>
    <a class="btn btn-lg btn-secondary cust-link" asp-action="Index">Cancel <i class="fa fa-times-circle"></i></a>
</form>