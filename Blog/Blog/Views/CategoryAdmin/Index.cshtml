@model IEnumerable<Category>
@{ 
    Layout = "_layoutAdmin";
}

<div class="alert alert-heading lead mt-5 mb-3"><h3>All Categories</h3></div>
<div class="text-danger" asp-validation-summary="All"></div>
<table class="table table-bordered table-sm">
    <thead><tr><th class="text-center">Category ID</th><th>Name</th><th>#</th><th>#</th></tr></thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr><td class="text-center" colspan="4">No Categories In Database Yet.</td></tr>

        }
        else
        {
            foreach(Category category in Model)
            {
                <tr>
                    <td class="text-center">@category.CategoryId</td>
                    <td>@category.CategoryName</td>
                    <td><a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@category.CategoryId">Edit <i class="fa fa-edit"></i></a></td>
                    <td>
                        <form method="post" asp-route-id="@category.CategoryId" asp-controller="CategoryAdmin" asp-action="Delete">
                            <button type="submit" class="btn btn-sm btn-danger">Delete <i class="fa fa-trash"></i></button>
                        </form>
                    </td>
                </tr>

            }

        }
    </tbody>
</table>
<a asp-action="Create"   asp-controller="CategoryAdmin" class="btn btn-lg btn-success cust-link"> Create New Category <i class="fa fa-plus-circle"></i></a>